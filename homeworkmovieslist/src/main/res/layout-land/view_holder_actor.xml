<?xml version="1.0" encoding="utf-8"?>
    <androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        style="@style/AppTheme"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/background"
        android:theme="@style/Theme.AppCompat.DayNight.NoActionBar"
        tools:context="ru.denisspirin.homeworkmovieslist.MainActivity">

        <ImageView
            android:id="@+id/ivActor"
            android:layout_width="160dp"
            android:layout_height="160dp"
            app:layout_constraintHorizontal_weight="1"
            android:scaleType="centerCrop"
            android:adjustViewBounds="true"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            tools:src="@drawable/image_robert_downey_jr_actor"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:contentDescription="@string/actor_s_image" />

        <TextView
            android:id="@+id/tvActor"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center_vertical|start"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            tools:text="@string/actor_1_t"
            app:layout_constraintStart_toStartOf="@id/ivActor"
            app:layout_constraintEnd_toEndOf="@id/ivActor"
            app:layout_constraintTop_toBottomOf="@id/ivActor"
            style="@style/cast_style"
            android:textStyle="bold"/>
    </androidx.constraintlayout.widget.ConstraintLayout>